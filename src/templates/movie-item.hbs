{{#each this}}
<li>
    <div>
        <img src="https://image.tmdb.org/t/p/w300{{poster_path}}" alt="{{title}}" width="280">
        <div class="card-bottom">
            <div class="descr">
                <h2 class="film-name">{{original_title}}</h2>
                <p class="film-genre">
                <ul>
                    {{#each genre_ids}}
                    <li>{{this}}
                    </li>
                    {{/each}}
                </ul>&#10072; <span class="film-year"> {{release_date}}</span></p>
            </div>
        </div>
    </div>
</li>
{{/each}}

